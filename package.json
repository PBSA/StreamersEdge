{
  "name": "streamers-edge",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "repository": {
    "url": "https://github.com/PBSA/StreamersEdge",
    "type": "git"
  },
  "description": "Backend module for StreamersEdge application",
  "author": {
    "name": "PBSA",
    "url": "https://github.com/PBSA"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "sonar": "node scripts/sonar.js",
    "lint": "eslint src/",
    "release": "standard-version",
    "release:pre": "npm run release -- --prerelease alpha",
    "release:minor": "npm run release â€“ --release-as minor",
    "commit": "git-cz",
    "serve": "NODE_ENV=development nodemon src/server.js",
    "serve:cron": "MODULE=cron NODE_ENV=development nodemon src/server.js",
    "start": "node src/server.js",
    "start:api": "MODULE=api node src/server.js",
    "start:cron": "MODULE=cron node src/server.js",
    "test:audit": "audit-ci --config audit-ci.json",
    "test:lint": "eslint . --quiet",
    "test:mocha": "NODE_ENV=test NODE_APP_INSTANCE=test mocha --exit --timeout 15000",
    "test:coverage": "NODE_ENV=test NODE_APP_INSTANCE=test nyc node_modules/.bin/mocha --exit --timeout 15000 && nyc report --reporter=text-summary",
    "build:doc": "swagger-jsdoc -d src/modules/api/swagger-definition.js -o docs/swagger.yaml"
  },
  "dependencies": {
    "awilix": "^4.2.1",
    "aws-sdk": "^2.481.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "config": "^3.1.0",
    "connect-session-sequelize": "^6.0.0",
    "cors": "^2.8.5",
    "cron": "^1.7.1",
    "crypto-random-string": "^3.0.0",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "fs-extra": "^8.0.1",
    "googleapis": "^39.2.0",
    "handlebars": "^4.1.2",
    "inquirer": "^6.3.1",
    "joi": "^14.3.1",
    "log4js": "^4.1.0",
    "moment": "^2.24.0",
    "multer": "^1.4.1",
    "multer-s3": "^2.9.0",
    "nodemailer": "^6.2.1",
    "normalize-email": "^1.1.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0",
    "passport-steam": "^1.0.10",
    "passport-twitch": "^1.0.3",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "pubg.js": "^3.9.0",
    "randomstring": "^1.1.5",
    "raven": "^2.6.4",
    "request": "^2.88.0",
    "sequelize": "^5.8.11",
    "swagger-ui-express": "^4.0.7",
    "un": "0.0.0",
    "url": "^0.11.0",
    "wallet-address-validator": "^0.2.4",
    "web-push": "^3.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^7.6.0",
    "audit-ci": "^1.6.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "chai-url": "^1.0.4",
    "commitizen": "^4.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.11",
    "nyc": "^14.0.0",
    "prettier": "^1.17.0",
    "standard-version": "^6.0.1",
    "supertest": "^4.0.2",
    "swagger-jsdoc": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.min.js"
    ]
  }
}
