{
  "name": "streamers-edge",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "repository": {
    "url": "https://github.com/PBSA/StreamersEdge",
    "type": "git"
  },
  "description": "Backend module for StreamersEdge application",
  "author": {
    "name": "PBSA",
    "url": "https://github.com/PBSA"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "sonar": "node scripts/sonar.js",
    "lint": "eslint src/",
    "release": "standard-version",
    "release:pre": "npm run release -- --prerelease alpha",
    "release:minor": "npm run release â€“ --release-as minor",
    "commit": "git-cz",
    "serve": "npm run lint && NODE_ENV=development nodemon src/server.js",
    "start": "node src/server.js",
    "test:audit": "audit-ci --config audit-ci.json",
    "test:lint": "eslint . --quiet",
    "test:mocha": "NODE_ENV=test NODE_APP_INSTANCE=test mocha --exit --timeout 15000",
    "test:coverage": "NODE_ENV=test NODE_APP_INSTANCE=test nyc node_modules/.bin/mocha --exit --timeout 15000 && nyc report --reporter=text-summary",
    "build:apidoc": "apidoc -i src/modules/api/controllers/ -o apidoc/ && apidoc-markdown -p apidoc -o docs/api.md"
  },
  "dependencies": {
    "awilix": "^4.2.1",
    "body-parser": "^1.18.3",
    "config": "^3.1.0",
    "connect-session-sequelize": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "inquirer": "^6.3.1",
    "joi": "^14.3.1",
    "log4js": "^4.1.0",
    "moment": "^2.24.0",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0",
    "passport-twitch": "^1.0.3",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "raven": "^2.6.4",
    "request": "^2.88.0",
    "sequelize": "^5.8.7",
    "un": "0.0.0",
    "url": "^0.11.0",
    "utils-merge": "^1.0.1",
    "wallet-address-validator": "^0.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.0",
    "@commitlint/config-conventional": "^7.6.0",
    "apidoc": "^0.17.7",
    "apidoc-markdown": "^0.2.1",
    "audit-ci": "^1.6.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "chai-url": "^1.0.4",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.11",
    "nyc": "^14.0.0",
    "prettier": "^1.17.0",
    "standard-version": "^6.0.1",
    "supertest": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.min.js"
    ]
  }
}
